<Window x:Class="SGI.View.DialogsInformation.ProvidersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"       
        xmlns:controls="clr-namespace:SGI.View.DialogsInformation"
        Title="Consultar Proveedores." Height="600" Width="850" WindowStartupLocation="CenterScreen"        
        Style="{StaticResource WindowDialog}" x:Name="viewProviders" >
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding Loaded}" CommandParameter="{Binding ElementName=viewProviders}">
            </i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <Border DockPanel.Dock="Bottom" Style="{StaticResource BorderBottom}" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button IsDefault="True"  Content="Aceptar" Command="{Binding Accept}" Style="{StaticResource ButtonApp}" />
                <Button IsCancel="True" Content="Cancelar" Command="{Binding Close}" Style="{StaticResource ButtonApp}" />
            </StackPanel>
        </Border>

        <Border>
            <controls:ViewProviders DataContext="{Binding ViewProvidersVM}" />
        </Border>
        
    </DockPanel>
</Window>
