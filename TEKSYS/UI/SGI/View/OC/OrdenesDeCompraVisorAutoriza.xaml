        <GroupBox Margin="2"
                  DockPanel.Dock="Top"
                  FontSize="14"
                  Header="Información Orden de Compra">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="Número: " />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         HorizontalAlignment="Stretch"
                         IsReadOnly="True"
                         Text="{Binding Number,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <Label Grid.Row="0"
                       Grid.Column="2"
                       Content="Fecha de emisión: " />
                <TextBox Grid.Row="0"
                         Grid.Column="3"
                         IsReadOnly="True"
                         Text="{Binding DateOutPut,
                                        UpdateSourceTrigger=PropertyChanged}" />
                <!--<DatePicker Grid.Row="0"
                            Grid.Column="3"
                            IsEnabled="False"
                            SelectedDate="{Binding DateOutPut,
                                                   Mode=TwoWay,
                                                   UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource styleDatePicker}" />-->

                <Label Grid.Row="0"
                       Grid.Column="4"
                       Content="Proveedor: " />
                <TextBox Grid.Row="0"
                         Grid.Column="5"
                         Width="230"
                         HorizontalAlignment="Left"
                         IsReadOnly="True"
                         Text="{Binding SupplierName,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />
                <!--<Label Grid.Row="0"
                       Grid.Column="4"
                       Content="Fecha de entrega: " />
                <DatePicker Grid.Row="0"
                            Grid.Column="5"
                            IsEnabled="False"
                            SelectedDate="{Binding DateDeliver,
                                                   Mode=TwoWay,
                                                   UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource styleDatePicker}" />-->

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Condición de pago: " />

                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         HorizontalAlignment="Stretch"
                         IsReadOnly="True"
                         Text="{Binding SelectedTypePay,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <Label Grid.Row="1"
                       Grid.Column="2"
                       Content="Dias: " />
                <TextBox Grid.Row="1"
                         Grid.Column="3"
                         HorizontalAlignment="Stretch"
                         IsReadOnly="True"
                         Text="{Binding Days,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <Label Grid.Row="1"
                       Grid.Column="4"
                       Content="Estatus: " />
                <TextBox Grid.Row="1"
                         Grid.Column="5"
                         Width="230"
                         HorizontalAlignment="Left"
                         IsReadOnly="True"
                         Text="{Binding EstatusOC,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <Label Grid.Row="2"
                       Grid.Column="0"
                       Content="Usuario Autoriza: " />
                <ComboBox Grid.Row="2" IsEnabled="False"
                          Grid.Column="1"
                          Height="30"
                          Margin="0"
                          DisplayMemberPath="Name"
                          ItemsSource="{Binding Empleados}"
                          SelectedItem="{Binding EmpleadoSeleccionado}" />

                <StackPanel Grid.Row="2"
                            Grid.Column="4"
                            Grid.ColumnSpan="2"
                            Width="Auto"
                            Margin="5,10,5,2"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">

                    <Button Name="btnAutorizar"
                            Width="130"
                            Height="25"
                            Margin="0 0 2 0"
                            HorizontalAlignment="Right"
                            VerticalContentAlignment="Center"
                            Command="{Binding Accept}"
                            Content="Autorizar orden"
                            FontSize="14"
                            FontWeight="Bold"
                            Style="{StaticResource NuclearGreenButton}" />

                </StackPanel>

            </Grid>
        </GroupBox>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Margin="2,5,5,2"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Label Content="Total General: " />
                    <TextBox Width="175"
                             HorizontalContentAlignment="Center"
                             FontSize="15"
                             FontWeight="Bold"
                             IsReadOnly="True"
                             Text="{Binding TotalGeneral,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>


        <DataGrid x:Name="dgOrderBuyDetail"
