                  Margin="2,5,2,5"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserResizeRows="True"
                  FrozenColumnCount="4"
                  IsReadOnly="False"
                  ItemsSource="{Binding DetailOrderList,
