                                    Header="Monto (USD)"
                                    IsReadOnly="True" />-->

                <DataGridTextColumn Width="auto"
                                    Binding="{Binding TotalCal}"
                                    CanUserResize="True"
                                    Header="Total"
                                    IsReadOnly="True" />

            </DataGrid.Columns>


        </DataGrid>

    </DockPanel>
</Window>
